<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
 <class name="com.zviproject.common.entity.Student" table="student" catalog="Student">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="name" length="10" not-null="true" unique="true" />
        </property>
        <property name="surname" type="string">
            <column name="surname" length="20" not-null="true" unique="true" />
        </property>
       
        
       
    </class>
    
    <class name="com.zviproject.common.entity.Mark" table="marks" catalog="Student">
     <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        
        <property name="idSubject" type="java.lang.Integer">
            <column name="id_subject" length="10" not-null="true" unique="true" />
        </property>
        
        <property name="idStudent" type="java.lang.Integer">
            <column name="id_student" length="10" not-null="true" unique="true" />
        </property>
        
        <property name="mark" type="java.lang.Integer">
            <column name="mark" length="10" not-null="true" unique="true" />
        </property>
        
        </class>
</hibernate-mapping>